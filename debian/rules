#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

CFLAGS := -Wall -g -O$(if $(findstring noopt,$(DEB_BUILD_OPTIONS)),0,2)
CFLAGS += -D_LARGEFILE64_SOURCE -D_FILE_OFFSET_BITS=64

debian/GeoIP.dat.gz.uue: config.status
	rm -f GeoIP.dat.gz
	wget http://geolite.maxmind.com/download/geoip/database/GeoLiteCountry/GeoIP.dat.gz
	uuencode GeoIP.dat.gz < GeoIP.dat.gz > $@
	rm -f GeoIP.dat.gz

debian/geoip/usr/lib/libGeoIP.a:
	rm -rf debian/tmp
	mkdir -p debian/tmp
	cd debian/tmp && sh ../GeoIP-lib/configure --prefix=/usr \
		--disable-shared --with-dbdir=/var/lib/webalizer \
		&& touch data/GeoIP.dat && make
	cd debian/tmp && make install DESTDIR=`pwd`/../geoip
	rm -rf debian/tmp

config.status: configure debian/geoip/usr/lib/libGeoIP.a
	dh_testdir
	# Add here commands to configure the package.
ifneq "$(wildcard /usr/share/misc/config.sub)" ""
	cp -f /usr/share/misc/config.sub config.sub
endif
ifneq "$(wildcard /usr/share/misc/config.guess)" ""
	cp -f /usr/share/misc/config.guess config.guess
endif
	autoconf
	./configure --host=$(DEB_HOST_GNU_TYPE) --build=$(DEB_BUILD_GNU_TYPE) \
	--prefix=/usr --mandir=\$${prefix}/share/man \
	--sysconfdir=/etc/webalizer --datadir=/usr/share --with-etcdir=/etc/webalizer \
	--enable-dns --enable-geoip --with-geoip-inc=debian/geoip/usr/include \
	--with-geoip-lib=debian/geoip/usr/lib --with-language=russian-cp1251

build: build-stamp
build-stamp: config.status debian/GeoIP.dat.gz.uue
	dh_testdir
	$(MAKE) CFLAGS="$(CFLAGS) -Idebian/geoip/usr/include -Idebian/geoip/usr/lib"
	touch build-stamp

clean: clean1
clean1:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) distclean
	rm -f config.cache config.log config.sub config.guess
	rm -rf debian/geoip
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	# Add here commands to install the package into debian/webalizer.

	# Create locale directories
	for i in $$(ls po/*.mo -1 -f | sed -e 's/po\///g' -e 's/\.mo//g'); do \
		mkdir -p $(CURDIR)/debian/webalizer/usr/share/locale/$$i/LC_MESSAGES; \
	done
	$(MAKE) install DESTDIR=$(CURDIR)/debian/webalizer
	cd debian && uudecode GeoIP.dat.gz.uue && gzip -d GeoIP.dat.gz
	mv debian/GeoIP.dat debian/webalizer/var/lib/webalizer/GeoIP.dat

	# Remove webalizer.conf.sample, this files will be created in postinst
	# based in sample file that is in usr/share/doc/webalizer
	rm -f $(CURDIR)/debian/webalizer/etc/webalizer.conf.sample

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs CHANGES
	dh_installdocs
	dh_installexamples
#	dh_install
	dh_installdebconf
	dh_installcron
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
